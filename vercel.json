{
  "framework": "nextjs",
  "buildCommand": "node scripts/build.js",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "env": {
    "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true",
    "SKIP_ENV_VALIDATION": "true"
  },
  "crons": [
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    }
  ]
}